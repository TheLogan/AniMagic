{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": [
      "es2017"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.json",
    "src/**/*.jsonc",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
}